
@{
    ViewBag.Title = "Pro";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card">
    <div class="card-header card-header-primary">
        <h4 class="card-title">Product Manage</h4>
        <p class="card-category"></p>
    </div>
    <div class="card-body">
        <form action="@Url.Action("AddPro")" method="post" class="form">
            <div class="row">

                <div class="col-md-3">
                    <div class="form-group">
                        <label class="bmd-label-floating">Name</label>
                        <input id="Name_product" name="Name_product" type="text" class="form-control">
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="bmd-label-floating">Price</label>
                        <input id="Price_product" name="Price_product" type="text" class="form-control">

                    </div>
                </div>
                <div class="col-md-4">

                    <div class="form-group">
                        <label class="bmd-label-floating">type product</label>

                       @* @Html.DropDownList("DropTypeList", (IEnumerable<SelectListItem>)ViewBag.CategoryList, "choose type", new { @class = "form-control text-primary" })*@

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="bmd-label-floating">Status</label>
                        <input id="Sta_product" name="Sta_product" type="text" class="form-control">
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">

                        <div class="form-group">
                            <label class="bmd-label-floating"> Description</label>
                            <textarea id="Des_product" name="Des_product" class="form-control" rows="5"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary pull-right">Save</button>
            <div class="clearfix"></div>
        </form>
    </div>
</div>

